			<Anchor point="TOP">
				<Offset x="-576" y="-100"/>
			</Anchor>
			<Anchor point="CENTER">
				<Offset x="0" y="0"/>
			</Anchor>
		</Anchors>
		<Attributes>
			<Attribute name="unit" type="string" value="player"/>
